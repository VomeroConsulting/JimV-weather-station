    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Attach using Process Id",
            "type": "python",
            "request": "attach",
            "program": "${workspaceFolder}/jim_weather_station.py",
            "processId": "${command:pickProcess}",
            "justMyCode": true
        },
        {
            "name": "Python: csv_interface",
            "type": "python",
            "request": "launch",
            "program": "csv_interface.py",
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Python: jim_weather_station",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/jim_weather_station.py",
            "console": "integratedTerminal",
            "diagnosticMode": "workspace",
            "logging.level": "debug",
            "justMyCode": false
        }
    ]
}